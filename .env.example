# Copy this to .env.local and fill in real values for local development

# App
NODE_ENV=development

# SMTP settings for contact form (required to send emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# Where to receive contact form messages
CONTACT_TO=yourdestination@example.com

# Optional: visible From address (defaults to SMTP_USER if not set)
CONTACT_FROM=Portfolio <no-reply@example.com>
